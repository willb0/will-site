---
export interface Props {
  title: string;
  description: string;
  pubDate: string;
  url: string | undefined;
}
let { title, description, pubDate, url } = Astro.props;
const shortDate = new Date(pubDate).toLocaleDateString("en", {
  dateStyle: "medium",
});
url = url + "/";
---

<li class="sm:grid flex flex-col gap-2 sm:grid-cols-3 leading-relaxed rounded-2xl border-zinc-700 dark:text-zinc-400 transition-colors">
  <a class="col-span-3 flex flex-col gap-2 sm:gap-4 shadow-xl sm:shadow-none p-5 my-3 hover:dark:bg-zinc-800 hover:bg-zinc-200 rounded-lg transition-colors" href={url}>
    <time datetime={pubDate} class="block sm:hidden text-sm tracking-wide text-black dark:text-zinc-400">{shortDate}</time>
    <span class="flex items-center justify-between">
      <h2
      class="text-xl text-black dark:text-white transition-colors"
    >
      {title}
    </h2>
    <time datetime={pubDate} class="hidden sm:block text-sm tracking-wide text-black dark:text-zinc-400">{shortDate}</time>

    </span>
    <p class="text-base text-black dark:text-zinc-400 transition-colors">{description}</p>
  </a>
</li>